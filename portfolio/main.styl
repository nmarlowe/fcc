body
  font-family: 'Merriweather', sans-serif
  position: relative

a
  text-decoration: none

h3
  margin: 0 0 1em

h4
  font-family: 'Lato', sans-serif

#portfolio
  font-family: 'Lato', sans-serif

#wrapper
  margin: 0 auto
  max-width: 940px
  padding: 8.5em 5%

.to-top a
  // background-color: rgba(235, 235, 235, 0.80)
  color: #000
  // padding: 1em
  right: 10px

.to-top a:hover
  // background-color: rgba(135, 135, 135, 0.50)
  text-decoration: none

header
  float: left
  margin: 0 0 30px 0
  padding: 5px 0 0 0
  width: 100%
  // position: fixed
  z-index: 100

#logo
  margin: 0
  text-align: center
  text-decoration: none

h1
  font-family: "Lato", sans-serif
  font-size: 1.75em
  font-weight: normal
  line-height: .8em
  margin: 15px 0

h2
  font-size: .75em
  font-weight: normal
  margin: -5px 0 0

// NAVIGATION

nav
  margin: 20px 0 0
  padding: 10px 0
  text-align: center

nav ul
  list-style: none
  margin: 0 10px
  padding: 0

nav li
  display: inline-block

nav a
  font-family: "Lato", sans-serif
  font-weight: 800
  padding: 15px 10px

// FOOTER

footer
  clear: both
  color: #ff8787
  font-size: 1em
  overflow: hidden
  padding-top: 50px
  text-align: center
  width: 100%

  // COLORS

footer a
  color: #ff8787

header
  background: #1c1c1c
  border-color: #1c1c1c

footer
  background: #1c1c1c
  border-color: #1c1c1c

#logo:hover
  color: #ff8787

h1, h2
  color: #ff8787

h4
  color: #3d3d3d

nav
  background: #1c1c1c

nav a, nav a:visited
  color: #fff

nav a:hover
  color: #ff8787
  text-decoration: none

#portfolio a
  color: #1c1c1c
  text-align: center
  text-decoration: none

body
  background-color: #fbfbfb
  color: #7a7a7a

a.thumbnail:hover,
a.thumbnail:focus,
a.thumbnail:active
  border-color: #dddddd

.peace
  color: #fff

.love
  color: #ff0000

@media screen and (min-width: 860px)
  footer
    border-bottom: 5px solid #1c1c1c
    height: 100%

  header
    border-bottom: 5px solid #1c1c1c
    margin-bottom: 60px

  h1
    font-size: 2em

  h2
    font-size: 1em
    margin: 10px

  nav
    background: none
    float: right
    font-size: 1.25em
    margin-right: 5%
    text-align: right
    width: 45%

  #logo
    float: left
    margin-left: 5%
    text-align: left
    text-decoration: none
    width: 45%

@media (min-width:1200px)
  .affix,
  .affix-bottom
    width: 263px
